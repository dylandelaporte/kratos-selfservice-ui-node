<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-6-widescreen">
                    {{> messages messages=messages className="global"}}

                    {{#if challenge}}
                        <form>
                            <!--<div style="margin-bottom: 8px">Hydra Challenge</div>
                            <label id="login-challenge">
                                <input name="challenge" value={{challenge}}></input>
                            </label>-->
                            <div class="field">
                                <label class="label">Hydra Challenge</label>
                                <div class="control">
                                    <input class="input" type="text" name="challenge" value={{challenge}}>
                                </div>
                            </div>
                        </form>
                    {{/if}}

                    {{#if id}}
                        <form>
                            <!--<div style="margin-bottom: 8px">Kratos Request Id</div>
                            <label id="login-request">
                                <input name="id" value={{id}}></input>
                            </label>-->
                            <div class="field">
                                <label class="label">Kratos Request Id</label>
                                <div class="control">
                                    <input class="input" type="text" name="id" value={{id}}>
                                </div>
                            </div>
                        </form>
                    {{/if}}

                    {{#if password}}
                        <div id="registration-password">
                            <h2 class="title">Register</h2>
                            {{> form form=password}}
                        </div>
                    {{/if}}

                    {{#if oidc}}
                        <div id="registration-oidc">
                            {{> form form=oidc}}
                        </div>
                    {{/if}}

                    <hr>

                    <a href="{{pathPrefix}}auth/login" class="button is-ghost">Already have an account? Log in
                        instead</a>
                </div>
            </div>
        </div>
    </div>
</section>
